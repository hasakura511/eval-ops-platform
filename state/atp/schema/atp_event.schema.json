{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/atp_event.schema.json",
  "title": "ATP Event",
  "type": "object",
  "required": ["ts", "id", "type", "summary"],
  "additionalProperties": true,
  "properties": {
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "id": {
      "type": "string",
      "pattern": "^[^/]+/\\d{6}$"
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "packet_id": {
      "type": "string",
      "pattern": "^[^/]+/\\d{6}$"
    }
  }
}
